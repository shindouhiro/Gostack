{
  "name": "my-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,green\" \"pnpm run frontend\" \"pnpm run backend\"",
    "frontend": "cd apps/frontend && pnpm dev",
    "backend": "cd apps/backend && air",
    "seed": "cd apps/backend && go run cmd/seed/main.go",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f mysql",
    "start": "pnpm run docker:up && sleep 5 && pnpm run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
